// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ========== 마스터 리스트 ==========

// 강의 (이름만)
model Course {
  id        String      @id @default(cuid())
  name      String      // 예: "알고리즘", "미적분학"
  color     String?     // 구분 색상
  tasks     DailyTask[]
  createdAt DateTime    @default(now())
}

// 교재 (이름만)
model Textbook {
  id        String      @id @default(cuid())
  name      String      // 예: "클린 코드", "OSTEP"
  color     String?     // 구분 색상
  tasks     DailyTask[]
  createdAt DateTime    @default(now())
}

// ========== 일일 Task ==========

model DailyTask {
  id          String    @id @default(cuid())
  date        DateTime  // 해당 날짜
  courseId    String?
  course      Course?   @relation(fields: [courseId], references: [id], onDelete: SetNull)
  textbookId  String?
  textbook    Textbook? @relation(fields: [textbookId], references: [id], onDelete: SetNull)
  content     String    // 세부 목표 (예: "Lecture 3 시청", "3장 읽기")
  isDone      Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())

  @@index([date])
  @@index([courseId])
  @@index([textbookId])
}

// ========== 목표 관리 ==========

model Goal {
  id         String     @id @default(cuid())
  title      String
  periodType PeriodType
  startDate  DateTime   // 시작일
  endDate    DateTime   // 종료일
  parentId   String?
  parent     Goal?      @relation("GoalHierarchy", fields: [parentId], references: [id])
  children   Goal[]     @relation("GoalHierarchy")
  status     GoalStatus @default(TODO)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([periodType])
  @@index([startDate, endDate])
}

enum PeriodType {
  MONTH
  WEEK
  DAY
}

enum GoalStatus {
  TODO
  IN_PROGRESS
  DONE
}

// ========== 질문 로그 ==========

model QuestionLog {
  id         String   @id @default(cuid())
  courseId   String?
  textbookId String?
  content    String
  isResolved Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([courseId])
  @@index([textbookId])
}
